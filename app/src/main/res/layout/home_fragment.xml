<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/primaryDarkColor"
    tools:context=".home.HomeFragment">

    <TextView
        android:id="@+id/welcome"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/welcome_text"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="@dimen/big_margin"
        android:textSize="@dimen/big_title_size"
        android:textColor="@color/secondaryLightColor"
        android:textStyle="bold"/>

    <TextView
        android:id="@+id/authorName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/author_name"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:textSize="@dimen/title_size"
        android:layout_marginBottom="@dimen/default_margin"
        android:textColor="@color/secondaryColor"
        app:layout_constraintBottom_toTopOf="@+id/authorMail"/>

    <TextView
        android:id="@+id/authorMail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/author_mail"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:textSize="@dimen/title_size"
        app:layout_constraintTop_toTopOf="parent"
        android:textColor="@color/secondaryColor"
        app:layout_constraintBottom_toBottomOf="parent"/>

    <TextView
        android:id="@+id/authorDate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/author_date"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="@dimen/default_margin"
        android:textSize="@dimen/title_size"
        android:textColor="@color/secondaryColor"
        app:layout_constraintTop_toBottomOf="@+id/authorMail"/>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/buttonEnter"
        android:layout_width="@dimen/zero_dimen"
        app:layout_constraintWidth_percent="0.8"
        style="@style/CustomButton"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="@dimen/big_margin"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="@dimen/big_margin"
        android:text="@string/button_enter" />

</androidx.constraintlayout.widget.ConstraintLayout>